<Window x:Class="WhatAmIHearing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhatAmIHearing"
        xmlns:ui="clr-namespace:ZemotoUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="What Am I Hearing?"
        Height="400"
        Width="800">
   <Window.DataContext>
      <local:MainViewModel />
   </Window.DataContext>
   <Window.Resources>
      <ui:EqualityConverter x:Key="EqualityConverter" />
   </Window.Resources>
   
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <ComboBox Grid.Row="0"
                ItemsSource="{Binding DeviceList, Mode=OneWay}"
                SelectedValue="{Binding SelectedDevice, Mode=TwoWay}"
                SelectedIndex="0"
                DisplayMemberPath="FriendlyName"
                Width="160"
                Height="24">
         <ComboBox.ItemContainerStyle>
            <Style TargetType="ComboBoxItem">
               <Setter Property="Width"
                       Value="300" />
            </Style>
         </ComboBox.ItemContainerStyle>
      </ComboBox>
      
      <StackPanel Grid.Row="1" 
                  Orientation="Horizontal"
                  Height="24"
                  Margin="8"
                  HorizontalAlignment="Right">
         <Button Content="Record"
                 Width="80"
                 Command="{Binding RecordCommand}"
                 IsEnabled="{Binding State, Converter={StaticResource EqualityConverter}, ConverterParameter={x:Static local:RecordingState.Stopped}}" />
         <Button Content="Stop"
                 Width="80"
                 Command="{Binding StopCommand}"
                 IsEnabled="{Binding State, Converter={StaticResource EqualityConverter}, ConverterParameter={x:Static local:RecordingState.Recording}}" />
      </StackPanel>
   </Grid>
</Window>
