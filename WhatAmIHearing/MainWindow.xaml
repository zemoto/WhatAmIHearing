<Window x:Class="WhatAmIHearing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhatAmIHearing"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="What Am I Hearing?"
        Height="200"
        Width="400">
   <Window.DataContext>
      <local:MainViewModel />
   </Window.DataContext>

   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="*" />
         <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <ComboBox Grid.Row="0"
                ItemsSource="{Binding DeviceList, Mode=OneWay}"
                SelectedValue="{Binding SelectedDevice, Mode=TwoWay}"
                SelectedIndex="0"
                DisplayMemberPath="FriendlyName"
                Width="300"
                Height="24">
         <ComboBox.ItemContainerStyle>
            <Style TargetType="ComboBoxItem">
               <Setter Property="Width"
                       Value="300" />
            </Style>
         </ComboBox.ItemContainerStyle>
      </ComboBox>

      <Button Grid.Row="1"
              Content="Record"
              HorizontalAlignment="Center"
              Width="80"
              Height="24"
              Margin="8"
              Command="{Binding RecordCommand}"
              IsEnabled="{Binding CanStartRecording, Mode=OneWay}" />
   </Grid>
</Window>
